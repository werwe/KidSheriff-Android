<?xml version="1.0" encoding="utf-8"?>

<kr.co.starmark.kidsheriff.widget.CheckedRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">


    <CheckBox
        android:id="@+id/check"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:button="@drawable/list_cehck" />
    <TextView
        android:layout_alignParentLeft="true"
        android:text="texteasdtast"
        android:id="@+id/account_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="#f4f3f1"
        android:layout_toLeftOf="@id/check"
        />

</kr.co.starmark.kidsheriff.widget.CheckedRelativeLayout>